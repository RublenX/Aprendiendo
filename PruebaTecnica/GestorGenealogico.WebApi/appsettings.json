{
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": { /*Este nivel es más restrictivo que las configuraciones individuales por defecto si no se indica es Information*/
      "Default": "Verbose",
      "Override": { /* Con esto se eviata las trazas que lanza el sistema operativo por debajo de ese nivel */
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }, 
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "trazas.log",
          "rollingInterval": 3, /*Valor 3 corresponde a diario*/
          "retainedFileCountLimit": 10 /*Número máximo de registros que se dejan como históricos*/
        }
      }
    ],
    "Enrich": [ "WithThreadId", "WithCorrelationId", "WithMachineName" ]
  }
}
